    "@rollup/plugin-typescript": "^12.1.1",
    "@types/node": "^22.9.1",
    "@types/react": "^18.3.12",
    "microbundle": "^0.15.1",
    "rollup": "^4.27.3",
    "rollup-plugin-dts": "^6.1.1",
    "typescript": "^5.6.3"
  },
